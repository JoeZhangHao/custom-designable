{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "preserve",
    "allowJs": true,
    "strict": true,
    "baseUrl": "./",
    "outDir": "./",
    "rootDir": "./",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strictFunctionTypes": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "removeComments": true,
    "declaration": true,
    "types": ["webpack-env", "element-plus/global", "lodash-es"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "**/*.d.ts",
    "types/**/*.d.ts",
    "types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./src/__tests__/*",
    "./esm/*",
    "./lib/*",
    "dist",
    "**/*.js",
    "**/*.md",
    "src/**/*.md"
  ]
}
